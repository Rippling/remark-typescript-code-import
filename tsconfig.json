{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "node16",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2018"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
